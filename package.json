{
	"name": "dot-wasm",
	"version": "0.0.0",
	"main": "index.js",
	"author": "Niklas Mischkulnig",
	"license": "MIT",
	"scripts": {
		"build": "make",
		"test-browser": "parcel build browser/index.html --cache-dir browser/.cache -d browser/dist --no-source-maps && cp dist/dot-wasm.wasm browser/dist",
		"test-browser-deploy": "now browser/dist --name dot-wasm --public",
		"test-node": "node test-node.js",
		"test-native": "clang dot-wasm-native.c -I/usr/local/opt/graphviz/include -L/usr/local/opt/graphviz/lib -L/usr/local/opt/graphviz/lib/graphviz -lgvpr -lgvc -lcgraph -lgvplugin_core -lgvplugin_dot_layout -o dot-wasm-native && ./dot-wasm-native"
	},
	"devDependencies": {
		"parcel-bundler": "^1.12.3"
	},
	"browser": {
		"fs": false,
		"path": false,
		"crypto": false
	}
}
